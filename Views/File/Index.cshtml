@model IEnumerable<FileUpload.Models.EmployeeModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<div class="container">

    <p>

        <a class="btn btn-primary" asp-controller="File" asp-action="Upload">Upload</a>

    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Position)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Salary)
                </th>
                <th></th>
            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Position)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Salary)
                    </td>
                </tr>

            }
        </tbody>
    </table>

    <a class="btn btn-secondary" asp-controller="File" asp-action="Download">Download in CSV</a>

</div>